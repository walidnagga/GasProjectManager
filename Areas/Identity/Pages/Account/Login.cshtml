@page
@model GasProjectManager.Areas.Identity.Pages.Account.LoginModel
<div class="col-md-4">
    <section>
        <form id="account" method="post">
            <h2>Ajouter un nouveau utilisateur</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-floating" style="margin:10px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="margin:10px">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div style="margin:10px">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
            </div>
        </form>
    </section>
</div>
