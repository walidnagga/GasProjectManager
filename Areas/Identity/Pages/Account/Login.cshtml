@page "/";
@model GasProjectManager.Areas.Identity.Pages.Account.LoginModel

<div class="card d-grid gap-2 col-3 mx-auto">
    <div class="card-header card text-center">Se connecter à GPM </div>
  <div class="card-body">   
    <form id="account" method="post">
        <div class="container-fluid mx-auto col-4">
            <img src="/img/steg.png"/>
        </div>
        <div class="zonetext1">
            <div class="form-floating" style="margin:10px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label">Matricule:</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="zonetext2">
           <div class="form-floating" style="margin:10px">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Mot de Passe:</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn btn-primary me-md-2" type="button">Login</button>
            </div>
            <div class="lien1">
                <a href="../interface recuperation/passe.html">Mot de passe oublier?</a> 
            </div>
            <div class="lien2">
                <a href="../interface d'inscription/inscrpition.html">Creer un compte</a>
            </div>
        </div>
    </form>
  </div>






</div>
